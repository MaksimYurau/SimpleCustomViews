<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_blue" />

    <Button
        android:id="@+id/btn_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_rectangle" />

    <Button
        android:id="@+id/btn_circles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_circles" />

    <Button
        android:id="@+id/btn_arbitrary_figures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_arbitrary_figures" />

</LinearLayout>